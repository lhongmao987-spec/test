/**game.wxss**/
page {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.game-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部栏 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: transparent;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.8);
}

.back-icon {
  font-size: 48rpx;
  color: #555555;
  font-weight: bold;
  line-height: 1;
}

.timer {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
}

.timer-icon {
  font-size: 28rpx;
}

.timer-text {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: bold;
}

/* 中间主区域 */
.main-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
}

/* 词语卡片 */
.word-card {
  width: 100%;
  min-height: 400rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.word-card.fade-out {
  transform: scale(0.95);
  opacity: 0;
}

.word-card.fade-in {
  transform: scale(1);
  opacity: 1;
}

.hint-text {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.word-text {
  font-size: 72rpx;
  font-weight: bold;
  color: #222222;
  text-align: center;
  line-height: 1.2;
}

/* 得分显示 */
.score-bar {
  margin-top: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.score-text {
  font-size: 28rpx;
  color: #555555;
  font-weight: bold;
}

/* 底部操作区域 */
.bottom-area {
  display: flex;
  width: 100%;
  height: 300rpx;
}

.action-left,
.action-right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.action-left {
  background: rgba(76, 175, 80, 0.15);
}

.action-right {
  background: rgba(255, 87, 34, 0.12);
}

.action-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.action-icon {
  font-size: 64rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.action-text-large {
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.action-text-small {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 为左右区域添加更明显的背景色 */
.action-left {
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.25), rgba(56, 142, 60, 0.2));
}

.action-right {
  background: linear-gradient(135deg, rgba(255, 87, 34, 0.22), rgba(244, 67, 54, 0.18));
}

/* 点击反馈效果 */
.action-left:active,
.action-right:active {
  opacity: 0.8;
}

