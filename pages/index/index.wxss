/**index.wxss**/
page {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  /* 安全区域适配 */
  padding-bottom: env(safe-area-inset-bottom);
}

.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  /* 确保内容可以滚动 */
  overflow-y: auto;
}

/* 顶部区域 */
.header {
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  flex-shrink: 0;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  /* 小屏幕适配 */
  font-size: clamp(44rpx, 7vw, 56rpx);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  /* 小屏幕适配 */
  font-size: clamp(24rpx, 4vw, 28rpx);
}

/* 中间区域 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 0;
  /* 允许内容区域滚动 */
  overflow-y: auto;
  width: 100%;
}

/* 规则说明卡片 */
.rule-card {
  width: 100%;
  max-width: 700rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12), 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
  margin-bottom: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
  flex-shrink: 0;
  /* 小屏幕适配 */
  padding: clamp(24rpx, 4vw, 32rpx) clamp(20rpx, 3.5vw, 28rpx);
}

.rule-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.rule-header {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.rule-icon {
  font-size: 36rpx;
  line-height: 1;
}

.rule-title {
  font-size: 30rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1.2;
}

.rule-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rule-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 16rpx 18rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 16rpx;
  border-left: 3rpx solid #667eea;
  transition: all 0.3s ease;
}

.rule-item:active {
  background: rgba(102, 126, 234, 0.1);
  transform: translateX(4rpx);
}

.rule-item-icon {
  font-size: 28rpx;
  line-height: 1.2;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.rule-item-text {
  font-size: 24rpx;
  color: #333333;
  line-height: 1.6;
  flex: 1;
}

/* 分类选择 */
.category-selector {
  width: 100%;
  margin-bottom: 30rpx;
}

.category-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 24rpx;
  text-align: center;
}

.category-options {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 16rpx;
  /* 小屏幕适配 */
  gap: clamp(12rpx, 2vw, 16rpx);
}

.category-option {
  padding: 20rpx 28rpx;
  background: #FFFFFF;
  border: 2rpx solid #E0E0E0;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #555555;
  transition: all 0.3s;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  min-width: 120rpx;
  /* 小屏幕适配 */
  padding: clamp(16rpx, 2.5vw, 20rpx) clamp(24rpx, 3.5vw, 28rpx);
  min-width: clamp(100rpx, 15vw, 120rpx);
}

.category-icon {
  font-size: 40rpx;
  line-height: 1;
}

.category-name {
  font-size: 24rpx;
  line-height: 1.2;
}

.category-option.active {
  background: #FFC94A;
  border-color: #FFC94A;
  color: #FFFFFF;
  font-weight: bold;
}

.category-option.active .category-name {
  color: #FFFFFF;
}

/* 时长选择 */
.time-selector {
  width: 100%;
}

.time-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 24rpx;
  text-align: center;
}

.time-options {
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

.time-option {
  padding: 16rpx 40rpx;
  background: #FFFFFF;
  border: 2rpx solid #E0E0E0;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #555555;
  transition: all 0.3s;
}

.time-option.active {
  background: #FFC94A;
  border-color: #FFC94A;
  color: #FFFFFF;
  font-weight: bold;
}

/* 底部区域 */
.footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 40rpx;
  flex-shrink: 0;
  margin-top: auto;
}

.start-btn {
  width: 80%;
  max-width: 600rpx;
  min-width: 400rpx;
  height: 96rpx;
  background: #FFC94A;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 201, 74, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
  /* 小屏幕适配 */
  width: clamp(70%, 80vw, 80%);
  height: clamp(88rpx, 12vw, 96rpx);
  font-size: clamp(28rpx, 4vw, 32rpx);
}

.start-btn text {
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

.version {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}
