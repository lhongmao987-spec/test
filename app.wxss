/**app.wxss**/
/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #222222;
  /* 安全区域适配 */
  padding-bottom: env(safe-area-inset-bottom);
}

/* 响应式工具类 */
.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-left {
  padding-left: env(safe-area-inset-left);
}

.safe-area-right {
  padding-right: env(safe-area-inset-right);
}

/* 通用容器 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 通用按钮样式 */
.btn {
  border-radius: 24rpx;
  font-weight: bold;
  border: none;
}

.btn::after {
  border: none;
}

/* 通用卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 文字颜色 */
.text-primary {
  color: #222222;
}

.text-secondary {
  color: #555555;
}

.text-muted {
  color: #999999;
}

/* 主色调 */
.color-primary {
  color: #FFC94A;
}

.color-accent {
  color: #FF6B6B;
}
