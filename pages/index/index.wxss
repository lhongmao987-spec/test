/**index.wxss**/
page {
  height: 100vh;
  background: linear-gradient(to bottom, #FFF7E6, #FFFBF0);
}

.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 顶部区域 */
.header {
  text-align: center;
  margin-top: 60rpx;
  margin-bottom: 80rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #222222;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #555555;
}

/* 中间区域 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 规则说明卡片 */
.rule-card {
  width: 100%;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 60rpx;
}

.rule-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #222222;
  margin-bottom: 24rpx;
  text-align: center;
}

.rule-text {
  font-size: 28rpx;
  color: #555555;
  line-height: 1.8;
  margin-bottom: 16rpx;
}

.rule-text:last-child {
  margin-bottom: 0;
}

/* 时长选择 */
.time-selector {
  width: 100%;
}

.time-label {
  font-size: 28rpx;
  color: #555555;
  margin-bottom: 24rpx;
  text-align: center;
}

.time-options {
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

.time-option {
  padding: 16rpx 40rpx;
  background: #FFFFFF;
  border: 2rpx solid #E0E0E0;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #555555;
  transition: all 0.3s;
}

.time-option.active {
  background: #FFC94A;
  border-color: #FFC94A;
  color: #FFFFFF;
  font-weight: bold;
}

/* 底部区域 */
.footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 40rpx;
}

.start-btn {
  width: 80%;
  height: 96rpx;
  background: #FFC94A;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 201, 74, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.start-btn text {
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

.version {
  font-size: 24rpx;
  color: #999999;
}
